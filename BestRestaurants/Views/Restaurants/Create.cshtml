@{
    Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h3>Add a new restaurant</h3>

<p><strong>NOTE:</strong> You need to have at least one cuisine before you can add a restaurant!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Cuisines") to create a cuisine.</p>


<p>Rate the restaurant (1-10) and Cost is ($-$$$) </p>
@using (Html.BeginForm())
{
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", style = "text-align: center;"} )<br><br>
    @Html.TextBoxFor(model => model.Rating, new { placeholder = "Rating", style = "text-align: center;"} )<br><br>
    @Html.TextBoxFor(model => model.Cost, new { placeholder = "Cost", style = "text-align: center;" } )<br><br>

    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId")<br>

    <input type="submit" value="Add new restaurant" class="btn btn-dark" />
}
<p>@Html.ActionLink("Show all restaurants", "Index")</p>