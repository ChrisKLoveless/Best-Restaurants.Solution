@{
    Layout = "_Layout";
}

@using BestRestaurants.Models


<h1>Reviews</h1>

@if (@Model.Count == 0)
{
    <h3>No reviews have been added yet!</h3>
}
else
{
    <ul>
    @foreach (Review review in Model)
        {
            <li>@review.Restaurant.Name | <em>@review.Description</em></li>
        }
    </ul>
}


<p>@Html.ActionLink("Back to list", "Index", "Restaurants")</p>
<p>@Html.ActionLink("Add new Review", "Create", "Reviews")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
